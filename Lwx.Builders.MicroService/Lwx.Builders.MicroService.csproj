<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Generators target netstandard2.0 for broad compatibility -->
    <TargetFramework>net9.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <LangVersion>preview</LangVersion>
    <NoWarn>CS0618;CS0612;CS9113</NoWarn>
    <!-- Ensure outputs use the Builders project name so build artifacts match the new namespace -->
    <AssemblyName>Lwx.Builders.MicroService</AssemblyName>
    <RootNamespace>Lwx.Builders.MicroService</RootNamespace>
    <EnforceExtendedAnalyzerRules>false</EnforceExtendedAnalyzerRules>
  </PropertyGroup>

  <ItemGroup>
    <!-- Roslyn packages needed for incremental generators (PrivateAssets prevents flow to consumers) -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.10.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.10.0" PrivateAssets="all" />
  </ItemGroup>

  <!-- Embedded attribute source files for the generator (Attributes/ contains public attribute definitions) -->
  <ItemGroup>
    <EmbeddedResource Include="Attributes\**\*.cs" />
    <EmbeddedResource Include="Templates\LwxEndpointExtensions.cs" />    
    <Compile Remove="Templates\**\*.cs" />
    <!-- exclude legacy/duplicate processors folder (moved to root Processors/) -->
    <Compile Remove="Generator\Processors\**\*.cs" />
  </ItemGroup>

  <!-- Exclude templates from compilation -->
  <ItemGroup>
    
  </ItemGroup>

  <!-- Optional analyzers or warnings suppression for generator project -->
  <PropertyGroup>
    <EnableNETAnalyzers>false</EnableNETAnalyzers>
  </PropertyGroup>

</Project>
